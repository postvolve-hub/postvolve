{
  "systemName": "PostVolve Internal Dashboard UI",
  "version": "1.1.0",
  "designTokens": {
    "colors": {
      "primary": {
        "name": "Purple Accent",
        "hex": "#6D28D9",
        "tailwindName": "volvo-purple"
      },
      "secondary": {
        "name": "Light Gray",
        "hex": "#F3F4F6",
        "tailwindName": "gray-100"
      },
      "background": {
        "name": "White",
        "hex": "#FFFFFF",
        "tailwindName": "white"
      },
      "text": {
        "name": "Dark Gray",
        "hex": "#1F2937",
        "tailwindName": "gray-800"
      }
    },
    "typography": {
      "fontFamily": {
        "sans": "Inter, system-ui, sans-serif",
        "heading": "Plus Jakarta Sans, system-ui, sans-serif"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      },
      "fontWeights": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem"
    },
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    }
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#6D28D9",
        "color": "#FFFFFF",
        "padding": "0.5rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": "600"
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#6D28D9",
        "border": "1px solid #6D28D9",
        "padding": "0.5rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": "600"
      }
    },
    "card": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": "0.75rem",
      "padding": "1.5rem",
      "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "border": "1px solid #D1D5DB",
      "borderRadius": "0.5rem",
      "padding": "0.5rem 0.75rem",
      "fontSize": "0.875rem"
    }
  },
  "layout": {
    "sidebar": {
      "width": "280px",
      "backgroundColor": "#FFFFFF",
      "borderRight": "1px solid #E5E7EB"
    },
    "header": {
      "height": "64px",
      "backgroundColor": "#FFFFFF",
      "borderBottom": "1px solid #E5E7EB"
    }
  }
}

